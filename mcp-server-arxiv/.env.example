# --- ArXiv Server Settings ---
MCP_ARXIV_HOST=localhost
MCP_ARXIV_PORT=8006 # Choose an unused port
MCP_ARXIV_RELOAD=false
MCP_ARXIV_LOG_LEVEL=info

# --- ArXiv Tool Configuration (Optional Defaults) ---
ARXIV_DEFAULT_MAX_RESULTS=5
ARXIV_DEFAULT_MAX_TEXT_LENGTH=5000

# Enable or disable x402 payment enforcement.
# Set to "off" to disable payments (useful for internal/free deployments).
# Set to "on" to enable payments (default).
MCP_ARXIV_X402_PRICING_MODE=on
MCP_ARXIV_X402_PAYEE_WALLET_ADDRESS="0x..."
MCP_ARXIV_X402_PRICING_CONFIG_PATH="tool_pricing.yaml"

# --- ArXiv Server Settings ---
MCP_ARXIV_HOST=localhost
MCP_ARXIV_PORT=8101 
MCP_ARXIV_LOGGING_LEVEL=info
MCP_ARXIV_HOT_RELOAD=false


