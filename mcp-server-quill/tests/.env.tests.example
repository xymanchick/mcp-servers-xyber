# E2E Test Configuration
# Copy this file to .env.tests and fill in your values

# Base URL of the running MCP Quill server
# When running via Docker Compose, this should be http://localhost:8113
# When running locally, this should be http://localhost:8001
MCP_QUILL_TEST_BASE_URL="http://localhost:8113"

# Request timeout for E2E tests (seconds)
MCP_QUILL_TEST_TIMEOUT_SECONDS=60

# Private key for x402 payment testing (wallet must have USDC on the configured network)
# For mainnet testing: use a wallet with real USDC on Base (chain_id: 8453)
# For testnet testing: use a wallet with testnet USDC on Base Sepolia (chain_id: 84532)
MCP_QUILL_TEST_PRIVATE_KEY=

# Quill API key for Quill endpoint testing
MCP_QUILL_TEST_QUILL_API_KEY=
