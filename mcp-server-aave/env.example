# Required and Optional environment variables for AAVE MCP Server

# Blockchain Configuration
AAVE_RPC_URL=https://eth-mainnet.g.alchemy.com/v2/your-api-key-here

# API Configuration
AAVE_API_BASE_URL=https://api.v3.aave.com/graphql
AAVE_TIMEOUT_SECONDS=30
AAVE_MAX_RETRIES=3

# Caching Configuration
AAVE_ENABLE_CACHING=true
AAVE_CACHE_TTL_SECONDS=300

# Risk Parameters
AAVE_MAX_SLIPPAGE_PERCENT=0.5
AAVE_MIN_HEALTH_FACTOR=1.1

# Uvicorn settings
MCP_AAVE_HOST=0.0.0.0
MCP_AAVE_PORT=8000

# Optional:
LOGGING_LEVEL=INFO
