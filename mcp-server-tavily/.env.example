TAVILY_API_KEY="your_tavily_api_key_here"
TOGETHER_API_KEY="your_api_key_here"

TAVILY_MAX_RESULTS=5

# Enable or disable x402 payment enforcement.
# Set to "off" to disable payments (useful for internal/free deployments).
# Set to "on" to enable payments (default).
MCP_TAVILY_X402_PRICING_MODE=on
MCP_TAVILY_X402_PAYEE_WALLET_ADDRESS="0x..."
MCP_TAVILY_X402_FACILITATOR_URL="https://x402.org/facilitator/validate"
MCP_TAVILY_X402_CDP_API_KEY_ID=
MCP_TAVILY_X402_CDP_API_KEY_SECRET=
MCP_TAVILY_X402_PRICING_CONFIG_PATH="tool_pricing.yaml"

# Uvicorn settings
MCP_TAVILY_HOST=0.0.0.0
MCP_TAVILY_PORT=8108
MCP_TAVILY_HOT_RELOAD=false
MCP_TAVILY_LOGGING_LEVEL=info

# Optional
LOGGING_LEVEL=INFO # One of DEBUG, INFO, WARNING, ERROR, CRITICAL