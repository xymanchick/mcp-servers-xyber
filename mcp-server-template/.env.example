# --- Weather Service Specific Settings ---
WEATHER_API_KEY="your_openweathermap_api_key_here"
WEATHER_TIMEOUT_SECONDS=10
WEATHER_ENABLE_CACHING=true
WEATHER_CACHE_TTL_SECONDS=300

########################################################
# x402 Protocol Settings

# Enable or disable x402 payment enforcement.
MCP_WEATHER_X402_PRICING_MODE=on # [on, off]

# This is the wallet address where you will receive payments.
# IMPORTANT: Replace with your own Ethereum wallet address.
MCP_WEATHER_X402_PAYEE_WALLET_ADDRESS="0x..."

# (Optional) For authenticated access to the CDP Facilitator on mainnet.
# See: https://docs.cdp.coinbase.com/x402/quickstart-for-sellers#running-on-mainnet
# MCP_WEATHER_X402_FACILITATOR_URL="https://x402.org/facilitator/validate"
# MCP_WEATHER_X402_CDP_API_KEY_ID=""
# MCP_WEATHER_X402_CDP_API_KEY_SECRET=""

# Path to the YAML file containing the pricing configuration for all tools.
MCP_WEATHER_X402_PRICING_CONFIG_PATH="tool_pricing.yaml"

########################################################

# MCP Weather Server - App Settings
MCP_WEATHER_HOST=0.0.0.0
MCP_WEATHER_PORT=8113
MCP_WEATHER_LOGGING_LEVEL=INFO
MCP_WEATHER_HOT_RELOAD=false


