# Enhanced .env.example with logging configuration
# Twitter API Configuration
TWITTER_API_KEY=your_api_key
TWITTER_API_SECRET_KEY=your_api_secret
TWITTER_ACCESS_TOKEN=your_access_token
TWITTER_ACCESS_TOKEN_SECRET=your_access_token_secret
TWITTER_BEARER_TOKEN=your_bearer_token

# Server settings
MCP_TWITTER_HOST=0.0.0.0
MCP_TWITTER_PORT=8112

# Optional Twitter settings
TWITTER_MEDIA_UPLOAD_ENABLED=True
TWITTER_MAX_TWEET_LENGTH=280
TWITTER_POLL_MAX_OPTIONS=4
TWITTER_POLL_MAX_DURATION=10080

# Logging Configuration
LOGGING_LEVEL=INFO               

# Performance and Monitoring
ENABLE_METRICS=true              # Enable metrics collection
METRICS_LOG_INTERVAL=300         # Log metrics summary every 5 minutes

# Development/Debug settings (use only in development)
TWITTER_HOT_RELOAD=false         