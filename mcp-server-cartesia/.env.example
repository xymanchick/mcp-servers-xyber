# --- Cartesia API Configuration ---
CARTESIA_API_KEY="YOUR_CARTESIA_API_KEY_HERE" # Required

# --- Optional Cartesia Defaults ---
# Default voice ID if not specified in the tool call
# Example: CARTESIA_VOICE_ID="a38e4e85-e815-43ab-acf1-907c4688dd6c"
CARTESIA_VOICE_ID="a38e4e85-e815-43ab-acf1-907c4688dd6c"

# Default model ID if not specified in the tool call
# Example: CARTESIA_MODEL_ID="sonic-2"
CARTESIA_MODEL_ID="sonic-2"

# Directory within the container/server where audio files will be saved
CARTESIA_OUTPUT_DIR="audio_outputs"

# --- Optional MCP Server Settings ---
MCP_CARTESIA_HOST=0.0.0.0
MCP_CARTESIA_PORT=8003
MCP_CARTESIA_RELOAD=false
MCP_CARTESIA_LOG_LEVEL=info
